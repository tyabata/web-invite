{
    "compilerOptions": {
      "experimentalDecorators": true,
      "allowJs": true,
      "sourceMap": true,
      "target": "es6",
      "module": "es6",
      "lib": ["es6", "dom"],
      "strict": true,
      "jsx": "react",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "noUnusedLocals": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "types": [
        "@types/node",
        "@nuxt/vue-app"
      ]

    },
    "include": ["src/**/*.ts", "src/**/*.vue"],
    "exclude": ["node_modules", "src/static", "src/assets"]
  }
